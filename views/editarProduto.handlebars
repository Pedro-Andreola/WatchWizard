<div class="tela">
<h2>Consulta do produto atual</h2>
<form action="/consultaProduto" method="post">
    <label for="nome">Nome do Produto:</label><br>
    <input type="text" name="nome" placeholder="Nome do Relógio"><br>
    <br>
    <button type="submit">Enviar</button>
</form>
<br>
</div>
<table>
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Cor</th>
        <th>Tipo</th>
        <th>Qtde Estoque</th>
        <th>Preço R$</th>
        <th>Descrição</th>
    </thead>
    <tbody>
   {{#each dados}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.nome}}</td>
            <td>{{this.cor}}</td>
            <td>{{this.tipo}}</td>
            <td>{{this.quantidadeEstoque}}</td>
            <td>{{this.precoUnitario}}</td>
            <td>{{this.descricao}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
<div class="tela">
<br>
<h2>Atualização do Produto</h2>
<br>
<form action="/editarProduto" method="post">
    <div class="btns">
        <div>
            <label for="id">Id do Produto:</label><br>
            <input type="text" name="id" placeholder="Id"><br>
            <label for="nome">Nome do Produto:</label><br>
            <input type="text" name="nome" placeholder="Nome do relógio"><br>
            <label for="cor">Cor do Produto:</label><br>
            <input type="text" name="cor" placeholder="Preto"><br>
            <label for="tipo">Tipo do Produto:</label><br>
            <input type="text" name="tipo" placeholder="Luxo"><br>
        </div>
        <div>
            <label for="quantidadeEstoque">Quantidade do Produto:</label><br>
            <input type="text" name="quantidadeEstoque" placeholder="Quantidade"><br>
            <label for="precoUnitario">Preço unitário do Produto:</label><br>
            <input type="text" name="precoUnitario" placeholder="Unitário"><br>
            <label for="descricao">Descrição do Produto:</label><br>
            <input type="text" name="descricao" placeholder="Descrição"><br>
            <br>
            <button type="submit">Enviar</button>
        </div>
    </div>
</form>
{{#if msg}}
    <p>{{msg}}</p>
{{/if}} 
{{#if msgB}}
    <p>{{msgB}}</p>
{{/if}} 
</div>